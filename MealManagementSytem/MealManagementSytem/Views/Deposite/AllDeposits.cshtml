@model IEnumerable<MealManagementSytem.Entities.DepositDetails>

@{
    ViewData["Title"] = "AllDeposits";
}

<style type="text/css">
    .dialogWithDropShadow {
        -webkit-box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
        -moz-box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
        font-weight: bold;
    }
</style>

<script src="~/js/Deposite/AllDeposites.js"></script>

<partial name="~/Views/Partial/_CDN.cshtml" />
<div class="mt-5">
    <b>Total deposits Of Current Month:</b>
    <input id="totalDeposits" style="width:100px;" class="form-control" type="text" />


    <div style="float:right;margin-bottom:15px;">
        <a id="popup" class="btn btn-sm btn-success text-white" onclick="showPopup()"><i class="fa fa-plus text-white" aria-hidden="true"></i>New</a>
    </div>

    <div class="fontChange" sans-serif;" id="popupDiv" style="display:none">
        <div>
            <div>
                <input id="inputFieldForDepositeId" class='form-control' type="hidden" />
                <label>Name</label>
                <select style="width:100%" class="form-control" id="ddlNameList">
                    <option value="0">Select Name</option>
                </select>
            </div>
            <br>
            <label>Amount</label>
            <input id="inputFieldForAmount" class='form-control' type="number" />
            <br>
            <label>Date</label>
            <input id="inputFieldForDate" class='form-control' type="date" />
            <br>
            <button type="submit" class="btn btn-sm btn-primary" onclick="SaveDepositedAmount()">Confirm</button>
            <button type="submit" class="btn btn-sm btn-danger" onclick="closePopup()">Close</button>
        </div>
    </div>
</div>

<div class="p-4 border rounded">
    <table id="tblData" class="table table-striped table-bordered" data-page-length='31'>
        <thead class="thead-dark">
            <tr class="table-info">
                <th>Date</th>
                <th>Name</th>
                <th>Member Id</th>
                <th>Amount</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>