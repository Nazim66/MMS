@model MealManagementSytem.Models.MealDetail

@{
    ViewData["Title"] = "Index";
}


<style type="text/css">
    .dialogWithDropShadow {
        -webkit-box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
        -moz-box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
        font-weight: bold;
    }

    #lunchCheckBox, #dinnerCheckBox {
        display: inline-block !important;
    }
    @@media (max-width: 320px) {

        .table-responsive {
            margin-top: 200px !important;
        }
    }

    @@media (max-width: 768px) {
        .table-margin {
            margin-top: 200px !important;
        }
    }
</style>

<script src="~/js/Meal/IndividualMealDetails.js"></script>

<partial name="~/Views/Partial/_CDN.cshtml" />

<br />
<br />
<div class="row mt-5 table-margin">
    <div class="table table-responsive col-xs-10 col-sm-11 pl-0 pr-0 mt-sm-5 ml-0" width:"100%">
        <b>Total Meals Of Current Month:</b>
        <input id="totalIndividualMeals" style="width:100px;" class="form-control" type="text" />
        <br />
        <table id="tblData" class="table table-striped" cellspacing="0" data-page-length='31'>
            <thead style="background:#008080!important">
                <tr class="table-info">
                    <th>Date</th>
                    <th>Lunch</th>
                    <th>Guest Lunch</th>
                    <th>Dinner</th>
                    <th>Guest Dinner</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
    <div class="col-xs-2 col-sm-1 mt-3">
        <a class="btn btn-sm btn-success text-white" onclick="showPopup()"><i class="fa fa-plus text-white" aria-hidden="true"></i>New</a>
    </div>
</div>


<div class="mt-5">
    <div id="popupDiv" style="display:none">
        <div class="checkbox">
            <label><input id="lunchCheckBox" type="checkbox">&nbsp;<storng>Lunch</storng><a onclick="generateFieldForLunch()" class="btn btn-sm btn-light"><i class="fa fa-plus" aria-hidden="true"></i></a></label>
            <div>
                <input id="inputFieldForLunch" placeholder="Guest Lunch" class='form-control' type='number' />
            </div>
        </div>
        <br />
        <div class="checkbox">
            <label><input id="dinnerCheckBox" type="checkbox">&nbsp;<storng>Dinner</storng><a onclick="generateFieldForDinner()"><i class="fa fa-plus" aria-hidden="true"></i></a></label>
        </div>
        <div>
            <input id="inputFieldForDinner" placeholder="Guest Dinner" class='form-control' type='number' />
        </div>
        <br />
        <button type="submit" class="btn btn-sm btn-primary" onclick="SaveMealDetail()">Confirm</button>
    </div>
</div>
